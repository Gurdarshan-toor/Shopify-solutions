<div class="countdown-timer-section">
  <div id="countdown-timer" class="flex cus_conter_timer">
    <div class="flex counter_col">
        <span class="hours t_number"></span><span class="t_str">Hours</span>      
    </div>
    <div class="flex counter_col">
        <span class="minutes t_number"></span><span class="t_str">Minutes</span>  
    </div>
    <div class="flex counter_col">
        <span class="seconds t_number"></span><span class="t_str">Seconds</span> 
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    let countDownDate = new Date("{{text_timer}}").getTime();
    let x = setInterval(function() {
      let now = new Date().getTime();
      let distance = countDownDate - now;

      let hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      let minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
      let seconds = Math.floor((distance % (1000 * 60)) / 1000);

      // Include additional hours from days
      hours += Math.floor(distance / (1000 * 60 * 60 * 24)) * 24;

      let hoursElements = document.querySelectorAll(".hours");
      let minutesElements = document.querySelectorAll(".minutes");
      let secondsElements = document.querySelectorAll(".seconds");

      hoursElements.forEach(function(element) {
        element.textContent = hours;
      });

      minutesElements.forEach(function(element) {
        element.textContent = minutes;
      });

      secondsElements.forEach(function(element) {
        element.textContent = seconds; 
      });

      if (distance < 0) {
        clearInterval(x);
        let countdownTimerElements = document.querySelectorAll("#countdown-timer");
        countdownTimerElements.forEach(function(element) {
          element.textContent = "EXPIRED";
        });
      }
    }, 1000);
  });
</script>


